<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen 
  xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Read me -->
    <Preference
        android:key="@string/preference_key_read_me"
        android:title="@string/preference_option_read_me" />
    <!-- Text to be shown on widget. -->
    <EditTextPreference
        android:key="@string/preference_widget_text_key"
        android:title="@string/preference_widget_text_title"
        android:summary="@string/preference_widget_text_summary"
        android:dialogTitle="@string/preference_widget_text_dialog_title"
        android:dialogMessage="@string/preference_widget_text_dialog_message"
        android:defaultValue="@string/preference_widget_text_default"/>
</PreferenceScreen>
